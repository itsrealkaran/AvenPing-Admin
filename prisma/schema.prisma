generator client {
  provider = "prisma-client-js" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActivityStatus {
  ACTIVE
  INACTIVE
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

enum ContactAttributeType {
  TEXT
  NUMBER
}

enum RecipientStatus {
  UNDELIVERED
  UNREAD
  READ
  REPLIED
}

enum RecipientSource {
  MANUAL
  IMPORT
  AI_SYNC
}

enum PlanPeriod {
  FREE_TRIAL
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  OVERDUE
  INACTIVE
  CANCELLED
}

enum userStatus {
  ACTIVE
  SUSPENDED
}

enum SignupStatus {
  REGISTERED
  PAID
  COMPLETED
}

enum FlowStatus {
  ACTIVE
  INACTIVE
}

// Unified User Model
model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  password    String
  phone       String?
  size        String?
  industry    String?

  maxContacts Int @default(0)
  maxFlows    Int @default(0)

  isAdmin Boolean @default(false)

  signupStatus SignupStatus @default(REGISTERED)

  whatsAppAccount WhatsAppAccount? @relation("UserWhatsAppAccount", fields: [whatsAppAccountId], references: [id])
  whatsAppAccountId String? @unique

  status userStatus @default(ACTIVE)
  expiresAt DateTime?

  plans Json[] // { [planName: string, period: string, isAddOn: boolean, quantity?: number, endDate: string] }

  subscription Subscription[]
  settings    UserSetting?

  isDeleted Boolean @default(false)

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([email])
}

// Store WhatsApp Business API credentials per user
model WhatsAppAccount {
  id              String                @id @default(cuid())
  wabaid          String // WhatsApp Business Account ID
  accessToken     String // Encrypted access token

  displayName     String
  verified        Boolean               @default(false)
  healthStatus    Json?
  businessVerificationStatus String?     @default("unverified") // verified, unverified, rejected
  status          String                @default("INACTIVE") // ACTIVE, SUSPENDED, DELETED

  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  flows WhatsAppFlow[]

  user            User?                 @relation("UserWhatsAppAccount")

  campaigns       WhatsAppCampaign[]
  phoneNumbers    WhatsAppPhoneNumber[]
  labels          Label[]
  attributes      ContactAttribute[]

  recipients WhatsAppRecipient[]
}

model WhatsAppPhoneNumber {
  id                     String  @id @default(cuid())
  phoneNumberId          String
  phoneNumber            String
  name                   String?
  codeVerificationStatus String?

  isRegistered Boolean @default(false)
  isSubscribed Boolean @default(false)

  accountId String
  account   WhatsAppAccount @relation(fields: [accountId], references: [id])

  recipients WhatsAppRecipient[]
  messages   WhatsAppMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Store individual recipients
model WhatsAppRecipient {
  id          String            @id @default(cuid())
  phoneNumber String
  name        String?

  whatsAppPhoneNumberId String?
  whatsAppPhoneNumber   WhatsAppPhoneNumber? @relation(fields: [whatsAppPhoneNumberId], references: [id])

  whatsAppAccountId String
  whatsAppAccount   WhatsAppAccount @relation(fields: [whatsAppAccountId], references: [id])

  hasConversation Boolean @default(false)

  status RecipientStatus @default(UNREAD)

  activeCampaignId String?

  lastCheckedTime DateTime @default(now())
  lastMessageTime DateTime?
  source RecipientSource @default(MANUAL)

  isDisabled Boolean @default(false)

  isOptedOut Boolean @default(false)

  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  messages  WhatsAppMessage[]
  labels    Label[]

  attributeValues Json[]

  @@unique([whatsAppPhoneNumberId, phoneNumber])
}

// Store campaign data
model WhatsAppCampaign {
  id             String           @id @default(cuid())
  name           String
  type           String // TEXT, IMAGE, TEMPLATE

  message        String?
  mediaUrl       String?
  templateName   String?

  recipientStats Json[] // [ { id: string, name: string, recipientNumber: string, status: string } ]
  accountId      String
  account        WhatsAppAccount  @relation(fields: [accountId], references: [id])
  status         String           @default("COMPLETED") // DRAFT, SCHEDULED, ACTIVE, PAUSED, COMPLETED, FAILED
  
  scheduledAt    DateTime?
  completedAt    DateTime?
  
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

// Store individual messages
model WhatsAppMessage {
  id                    String               @id @default(cuid())
  wamid                 String? // WhatsApp Message ID for delivery tracking

  status                MessageStatus        @default(PENDING)

  message               String?
  mediaIds              String[]
  templateData          Json? // { header: string, body: string, footer: string }

  interactiveJson       Json? // { [type: string, label: string] }

  isOutbound            Boolean              @default(false)
  errorMessage          String?

  phoneNumber           String?

  sentAt                DateTime?
  deliveredAt           DateTime?            @default(now())
  readAt                DateTime?
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt

  whatsAppPhoneNumberId String?
  whatsAppPhoneNumber   WhatsAppPhoneNumber? @relation(fields: [whatsAppPhoneNumberId], references: [id])
  recipientId           String
  recipient             WhatsAppRecipient    @relation(fields: [recipientId], references: [id])
}

model Label {
  id String @id @default(cuid())
  name String
  description String?
  
  color String @default("blue") // blue, green, red, yellow, purple, orange, pink, gray, brown, black, white

  accountId String
  account   WhatsAppAccount @relation(fields: [accountId], references: [id])

  recipients WhatsAppRecipient[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactAttribute {
  id String @id @default(cuid())
  name String
  type ContactAttributeType @default(TEXT)

  accountId String
  account   WhatsAppAccount @relation(fields: [accountId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WhatsAppFlow {
  id String @id @default(cuid())
  name String

  triggers       String[]
  automationJson Json[]
  recipientArray Json[] // { [recipientNumber: string, automationTime: string] }

  isDisabled Boolean @default(false)

  status FlowStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId String
  account   WhatsAppAccount @relation(fields: [accountId], references: [id])
}

model Plan {
  id String @id @default(cuid())
  name String

  monthlyPriceJson Json? // { amount: number, currency: string }
  yearlyPriceJson Json? // { amount: number, currency: string }

  features String[]
  
  isAddOn Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id String @id @default(cuid())

  userId String
  user User @relation(fields: [userId], references: [id])

  planName String
  period PlanPeriod
  amount Float
  currency String

  endDate DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSetting {
  id String @id @default(cuid())

  userId String @unique
  user User @relation(fields: [userId], references: [id])

  isOptOutSelected Boolean @default(false)
  optOutKeywords String[]

  notificationSettings Json[] // { [notificationType: string, isEnabled: boolean] }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}